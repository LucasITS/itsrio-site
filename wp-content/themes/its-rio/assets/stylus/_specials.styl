.curved-shadow
    position: relative;

.curved-shadow:before, .curved-shadow:after
    z-index: -1;
    position: absolute;
    content: "";
    bottom: 14px;
    left: 0px;
    width: 50%;
    height 1px
    max-width:300px;
    background: black;
    box-shadow 0 14px 8px #000
    transform: rotate(-3deg);

.curved-shadow:after
    transform: rotate(3deg);
    right: 0px;
    left auto